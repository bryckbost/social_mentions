<h1><%= @user.full_name %></h1>

<h2>Public repositories</h2>

<ul>
<% @user.personal_repositories.each do |repo| %>
  <li><%= link_to repo.name, repository_path(:user => current_user.name, :name => repo.name) %></li>
<% end %>
<% @user.github.organizations.each do |org| %>
  <% @user.github.organization_repositories(org.login).each do |repo| %>
    <li><%= link_to repo.name, repository_path(:user => org.login, :name => repo.name) %></li>
  <% end %>
<% end %>
</ul>